<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ePolice - Home</title>
    <link rel="stylesheet" href="stylesheets/homepage.css" />
    <!-- <link rel="stylesheet" href="css/bootstrap.min.css" />
    <script src="js/bootstrap.min.js"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg  bg-primary text-white">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="/images/nepal.png" style="height: 50px; width: 50px;"  alt="Nepal Flag" />
          </a>
          <div class="d-flex justify-content-center fs-1">EPolice</div>
            <div class="d-flex" role="search">
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
              <a class="nav-link active" aria-current="page"href="/home"> <img src="/images/home.png" alt="Home" style="height: 50px; width: 50px;"/></a>

                  <li class="nav-item dropdown" data-user-id="<%= JSON.stringify(user.notificationIds) %>">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" >
                    <img src="/images/notification.png" alt="Notifications"  style="height: 50px; width: 50px;"/>
                    <% if (notification.length > 0) { %>
                      <span id="notificationBadge" class="badge rounded-pill bg-danger" ><%= notification.length %> </span>
                    <% } %>
                    </a>
                    <ul class="dropdown-menu" >
                      <% if (notification.length === 0) { %>
                        <li><a class="dropdown-item" href="#">No notifications</a></li>
                      <% } else { %>
                        <% for (let i = 0; i < notification.length; i++) { %>
                          <%console.log(notification[i])%>
                          <li><a class="dropdown-item" href="#" "><%= notification[i].report_id.description %> is <%= notification[i].status %></a></li>
                          <% if (i < notification.length - 1) { %>
                            <li><hr class="dropdown-divider"></li>
                          <% } %>
                        <% } %>
                      <% } %>
                    </ul>
                  </li>
                </li>
                <li class="nav-item">
                  <a href="/profile"> 
               <img src="/images/user.png" alt="User" style="height: 60px; width: 50px;">

                  </a>

                </li>
                </ul>
              </div>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="interactive-cards">
        <h2>Report an Incident</h2>
        <p>
          If you have witnessed or experienced an incident, please report it
          here.
        </p>
        <a href="/report" class="btn-report">Report Incident</a>
      </div>
      <div class="interactive-cards">
        <h2>Emergency Numbers </h2>
        <p>Quickly access emergency services in Nepal.</p>
        <a href="/emergencynumber" class="btn-emergency">Emergency Numbers</a>
      </div>

      <div class="interactive-cards">
        <h2>Nearest police station</h2>
        <p>Search for your nearby police station.</p>
        <a href="/map" class="btn-police">Find</a>
      </div>
    </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const notificationIdsString = document.querySelector('.nav-item.dropdown').getAttribute('data-user-id');
      const notificationIds = JSON.parse(notificationIdsString);

      const notificationBadge = document.getElementById('notificationBadge');
      const dropdownToggle = document.querySelector('.dropdown-toggle');
      const dropdown = document.querySelector('.nav-item.dropdown');

      dropdownToggle.addEventListener('click', async function () {
        if (notificationBadge) {
          notificationBadge.remove();
        }
        // Update the count in the session or wherever you store it

          if (notificationIds.length) {

          const response = await fetch('http://localhost:3000/notification/update', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({notificationIds}),
          });
        }
      });
    });
  </script>
  </body>
</html>
